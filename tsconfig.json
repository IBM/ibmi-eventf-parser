{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "testfixtures",
    "vitest",
    "dist"
  ]
}